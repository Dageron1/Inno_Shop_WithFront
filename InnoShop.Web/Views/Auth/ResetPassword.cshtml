@using InnoShop.Web.Models.VM
@model ResetPasswordViewModel

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="row text-center w-100">
            <div class="d-flex justify-content-center">
                <div class="card rounded-3 shadow border-0" style="width: 25rem;">
                    <img class="card-img-top rounded-top" src="~/images/LoginImage/bg-1.jpg" alt="" style="margin-bottom: 0;" />
                    <div class="card-body p-5">
                        <!-- Зарезервируем место для сообщений с помощью min-height -->
                        <div style="position: absolute; top: 37%; left: 5%; width: 90%; z-index: 1;">
                            @if (TempData["success"] != null)
                            {
                                <div class="alert alert-success" style="font-size: 14px; padding: 5px 10px;">
                                    @TempData["success"]
                                </div>
                            }

                            @if (TempData["error"] != null)
                            {
                                <div class="alert alert-danger" style="font-size: 14px; padding: 5px 10px;">
                                    @TempData["error"]
                                </div>
                            }
                        </div>

                        <div class="d-flex mt-0">
                            <div class="w-100">
                                <h3 class="mb-4 text-start">Reset Password</h3>
                            </div>
                        </div>

                        <form id="reset-password-form" asp-action="ResetPassword" method="post" class="mt-1">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />
                            <div class="form-floating mb-3">
                                <input asp-for="NewPassword" id="newPassword" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="New password" />
                                <label asp-for="NewPassword" class="form-label">Password</label>
                                <span id="passwordError" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="ConfirmPassword" id="confirmPassword" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Confirm password" />
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    document.getElementById('reset-password-form').addEventListener('submit', function (event) {
        var password = document.getElementById('newPassword').value;
        var passwordError = document.getElementById('passwordError');
        passwordError.textContent = ''; // Сброс ошибки

        // Условия для проверки пароля
        var minLength = 8;
        var hasUpperCase = /[A-Z]/.test(password); // Наличие заглавной буквы
        var hasLowerCase = /[a-z]/.test(password); // Наличие строчной буквы
        var hasNumber = /[0-9]/.test(password);    // Наличие цифры
        var hasSpecialChar = /[!@@#$%^&*(),.?":{}|<>]/.test(password); // Наличие спецсимвола

        // Проверка минимальных требований
        if (password.length < minLength) {
            passwordError.textContent = 'Password must be at least ' + minLength + ' characters long.';
            event.preventDefault(); // Останавливаем отправку формы
        } else if (!hasUpperCase) {
            passwordError.textContent = 'Password must contain at least one uppercase letter.';
            event.preventDefault(); // Останавливаем отправку формы
        } else if (!hasLowerCase) {
            passwordError.textContent = 'Password must contain at least one lowercase letter.';
            event.preventDefault(); // Останавливаем отправку формы
        } else if (!hasNumber) {
            passwordError.textContent = 'Password must contain at least one number.';
            event.preventDefault(); // Останавливаем отправку формы
        } else if (!hasSpecialChar) {
            passwordError.textContent = 'Password must contain at least one special character (e.g. !@@#$%^&*).';
            event.preventDefault(); // Останавливаем отправку формы
        }
    });
</script>
}
