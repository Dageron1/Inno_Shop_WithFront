@using InnoShop.Web.Models.Dto
@model RegistrationRequestDto
<head>
    <link rel="stylesheet" type="text/css" href="~/css/opensans-font.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/fonts/line-awesome/css/line-awesome.min.css">
    <!-- Jquery -->
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
</head>


<body class="form-v4 mt-3">
    <div class="page-content">
        <div class="form-v4-content">
            <div class="form-left">
                <h2>INFOMATION</h2>
                <p class="text-1">This is a site made for training, here I test different features and technologies. The design and functionality of the site should gradually improve.</p>
                <p class="text-2"><span>Eu ultrices:</span> Vitae auctor eu augue ut. Malesuada nunc vel risus commodo viverra. Praesent elementum facilisis leo vel.</p>
                <div class="form-left-last">
                    <div class="d-flex flex-column mt-3">
                       @*  <div class="w-100">
                            <a class="btn btn-lg btn-light rounded-1" id="login" asp-area="Identity" asp-page="/Account/Login">Have An Account</a>
                        </div> *@
                        <div class="my-1">
                            or connect via:
                        </div>
                    </div>
                </div>
            </div>
           
            <form class="form-detail" method="post" id="registerForm">
                <h2>REGISTER FORM</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-row">
                    <label for="your_email">Your Email</label>
                    <input asp-for="@Model.Email" type="text" autocomplete="username" class="input-text" aria-required="true" placeholder="example@gmail.com">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <label for="your_email">Your Name</label>
                    <input asp-for="@Model.Name" type="text" autocomplete="username" class="input-text" aria-required="true" placeholder="You Nickname">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-row mb-3 col-md-6">
                    <label for="your_phone">Your Phone</label>
                    <input asp-for="@Model.PhoneNumber" class="input-text" placeholder="+123456..." />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                    <div class="form-row">
                        <label for="password">Password</label>
                        <input asp-for="@Model.Password" type="password" id="password" class="form-text" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                <div class="d-flex mt-3">
                    <div class="form-row-last mt-3">
                        <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
