@using InnoShop.Web.Models.VM
@model ChangePasswordViewModel

<head>
    <link rel="stylesheet" href="~/css/profile.css" />
</head>
<hr />
<h5>Change Password</h5>
<form asp-action="ChangePassword" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="CurrentPassword">Current Password</label>
            <input asp-for="CurrentPassword" class="bg-light form-control" type="password" placeholder="Enter current password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="NewPassword">New Password</label>
            <input asp-for="NewPassword" class="bg-light form-control" type="password" placeholder="Enter new password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="ConfirmNewPassword">Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="bg-light form-control" type="password" placeholder="Confirm new password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 mt-4">
            <button type="submit" class="btn btn-secondary w-100">Change Password</button>
        </div>       
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
